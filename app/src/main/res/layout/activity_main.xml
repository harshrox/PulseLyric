<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/main_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elevating Care with Knowledge."
        android:layout_below="@+id/main_logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ubuntu_medium"
        android:textSize="15dp"
        android:id="@+id/tagLine"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_above="@+id/symptomsCardview"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="60dp"
        android:id="@+id/reminderCardview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@drawable/gradient_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine Reminder"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="25dp"
                android:paddingHorizontal="10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="60dp"
        android:id="@+id/symptomsCardview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@drawable/gradient_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptom checker"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="25dp"
                android:paddingHorizontal="10dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>